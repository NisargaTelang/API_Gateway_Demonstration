PORT=3000
NODE_ENV=production

# JWT (same secret as auth-service)
JWT_ALG=HS256
# JWT_SECRET=${JWT_SECRET}
JWT_ISS=
JWT_AUD=

# Upstreams â€” point to **service names** (not localhost!)
AUTH_BASE=http://auth-service:8080/auth
PRODUCT_BASE=http://product-service:8081
PAYMENT_BASE=http://payment-service:8083
ORDER_BASE=http://order-service:8082

# CORS (browser hits gateway from your host)
# CORS_ORIGINS=http://localhost:${FRONTEND_PORT}

# Timeouts/Retry
REQUEST_TIMEOUT_MS=8000
RETRY_ATTEMPTS=1

# Redis (for rate limits)
REDIS_URL=redis://redis:6379

# Rate limits (per your code)
PUBLIC_LIMIT_PER_MIN=60
AUTH_LIMIT_PER_MIN=600
ADMIN_LIMIT_PER_MIN=1200
RATE_WINDOW_SECONDS=60
RATE_ALGORITHM=sliding

LOG_LEVEL=info
